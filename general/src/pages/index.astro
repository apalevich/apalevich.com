---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/Hero.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import LibraryCard from "@components/LibraryCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const library: CollectionEntry<"library">[] = (
  await getCollection("library")
)
  .filter((book) => !book.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_BOOKS_ON_HOMEPAGE);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore><Hero /></aside>

    <!-- <h1 class="font-semibold text-black dark:text-white">My name is Artyom</h1> -->
    <div class="space-y-16">
      <section class="space-y-4">
        <article>
          <span>
            <p>
              <span class="font-semibold">My name is Artem. </span>
              I launch digital products, read non-fiction books and write to understand
              humans better
            </p>
            <p>
              This is my quiet corner of the internet for <Link href="/library"
                >book reviews</Link
              > and <Link href="/blog">blog posts</Link>
            </p>
          </span>
          <span class="animate">
            <h3 class="font-serif">What you’ll find here:</h3>
            <div>
              <h4><Link href="/library">Book Reviews</Link></h4>
              <p>
                I read to learn, so my reading is pretty systematic: looking for
                models and patterns, entartaining myself with controversial
                opinions, and challenging conventional wisdom. Every book review
                is a summary of ideas and links to other readings. Expect notes
                on productivity, business, psychology, technology, and the
                occasional sci-fi detour
              </p>
            </div>
            <div>
              <h4><Link href="/blog">Blog Posts</Link></h4>
              <p>
                I write about my personal experience: travels, observations,
                creativity and chaos managing. I also share my thoughts on
                technology, productivity, and personal growth
              </p>
            </div></span
          >
          <span class="animate">
            <h3 class="font-serif">Professional Projects</h3>
            <p>
              Professionally, I’m a frontend developer + product-minded tech
              consultant. I build lean products, run audits, and help teams ship
              improvements that users can feel (speed, UX, reliability,
              clarity). I prefer project-based, outcome-focused work, with
              honest feedback loops
            </p>
            <p>
              If you came here looking for the “work” side, it’s alive and well.
              I’m building and shipping things like ProCommento and other
              product experiments under my boutique web development agency:
            </p>
            <p>
              <ul class="font-bold">
                <li>
                  <Link href="https://apalevich.pro" external
                    >APalevich.Pro</Link
                  >: my professional home base, services, and product
                  experiments
                </li>
                <li>
                  <Link href="https://procommento.com" external
                    >ProCommento</Link
                  >: a LinkedIn commenting and growth toolkit (analytics +
                  gamification) >
                </li>
              </ul>
            </p>
          </span>
        </article>
      </section>
      <section class="animate space-y-6">
        <div class="flex flex-wrap items-center justify-between gap-y-2">
          <h2 class="font-semibold text-black dark:text-white">Latest posts</h2>
          <Link href="/blog"> See all posts </Link>
        </div>
        <ul class="not-prose flex flex-col gap-4">
          {
            blog.map((post) => (
              <li>
                <ArrowCard entry={post} />
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap items-center justify-between gap-y-2">
          <h2 class="font-semibold text-black dark:text-white">
            Recent reads
          </h2>
          <Link href="/library"> See all books </Link>
        </div>
        <ul class="not-prose flex flex-col gap-4">
          {
            library.map((book) => (
              <li>
                <LibraryCard entry={book} />
              </li>
            ))
          }
        </ul>
      </section>

      <section class="animate space-y-4">
        <h2 class="font-semibold text-black dark:text-white">Let's Connect</h2>
        <article>
          <p>
            If you want to get in touch with me about something or just to say
            hi, reach out on social media or send me an email.
          </p>
        </article>
        <ul class="not-prose flex flex-wrap gap-2">
          {
            SOCIALS.map((SOCIAL) => (
              <li class="flex gap-x-2 text-nowrap">
                <Link
                  href={SOCIAL.HREF}
                  external
                  aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                >
                  {SOCIAL.NAME}
                </Link>
                {"/"}
              </li>
            ))
          }
          <li class="line-clamp-1">
            <Link
              href={`mailto:${SITE.EMAIL}`}
              aria-label={`Email ${SITE.TITLE}`}
            >
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container></Layout
>
