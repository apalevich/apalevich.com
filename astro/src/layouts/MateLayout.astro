<script>
    const container = document.getElementById('fullPageContainer');
    const applicationForm = document.getElementById('applicationForm');
    const applicationResult = document.getElementById('applicationResult');
    
    applicationForm.addEventListener('submit', handleFormSubmit);
    
    document.querySelectorAll('[data-modal-show]')
    .forEach((el) => {
        el.addEventListener('click', function() {
            container.classList.remove('hidden');
            if (window.fbq) {
                window.fbq('track', 'OpenModal');
            } else {
                console.error('window.fbq is not found');
            }
        });
    });
    
    document.getElementById('fullPageContainer')
    .addEventListener('click', (event: MouseEvent) => {
        const target = event.target as Element;

        if (target && target.hasAttribute('data-modal-hide')) {
            hideContainer();
        }
    });

    document.addEventListener('keydown', function(event) {
        if (event.key === "Escape") {
            hideContainer();
        }
    });

    function hideContainer () {
        container.classList.add('hidden');
        toggleBurgerMenu(false)
    }

    function toggleBurgerMenu (value = null) {
        const burgerMenu = document.getElementById('hbr') as HTMLInputElement;
        value !== null ? burgerMenu.checked = value : burgerMenu.checked = !burgerMenu.checked;
    };

    async function handleFormSubmit(e: SubmitEvent) {
        e.preventDefault();
        const data = new FormData(e.target as HTMLFormElement);

        // Basic validation
        const firstName = data.get('firstName').toString().trim();
        const email = data.get('email').toString().trim();
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; // Simple email validation regex

        if (!firstName || firstName.length < 2) {
            alert('Please enter a valid first name.');
            return;
        }

        if (!emailRegex.test(email)) {
            alert('Please enter a valid email address.');
            return;
        }

        setStatus('Sending...');
        const response = await sendData(data);

        if (response.status === 200) {
            setStatus('Your application successfully sent!');
            return;
        }

        setStatus('Something went wrong, sorry...');
    }

    async function sendData(data) {
        return await fetch('/backend/mate/submit-form', {
            method: 'POST',
            body: data,
        })
    };
    
    function setStatus(status) {
        const reqStatus = document.getElementById('reqStatus');
        reqStatus.innerText = status;
        applicationResult.classList.remove('hidden');
        applicationForm.classList.add('hidden');
    }
</script>