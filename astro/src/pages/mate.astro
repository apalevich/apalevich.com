---
import MateLayout from "../layouts/MateLayout.astro";

import { content } from '../content';
import ChartPrompt from '../components/ChartPrompt.astro';

import Hero from '../components/Hero.astro';
import Cards from '../components/Cards.astro';
import Roles from '../components/Roles.astro';
import BlockWithIllustration from '../components/BlockWithIllustration.astro';
import Pricing from '../components/Pricing.astro';
import Disclosures from '../components/Disclosures.astro';
---
<MateLayout>
    <Hero content={content.HeroSection} />
    <Cards content={content.FeaturesSection} />
    <Roles content={content.ForWhomSection} />
    <BlockWithIllustration illustration={ChartPrompt} content={content.UnlockedPotentialSection} />
    <Pricing content={content.PlansSection} />
    <Disclosures content={content.FAQData} />
</MateLayout>