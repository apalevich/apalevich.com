<style>
    .result-active {
        transform: scale(1.2);
        transition: transform 300ms ease-in-out;
    }
</style>

<div id="app" class="p-4 w-full max-w-lg bg-gray-100 flex items-center justify-center h-screen">
    <textarea id="codeInput" class="w-full p-4 bg-white border border-gray-300 rounded-lg mb-4" placeholder="Paste your code here"></textarea>
    <button id="reviewButton" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 ease-in-out">
        Get the Code Review
    </button>
    <div id="resultMessage" class="hidden text-center text-2xl mt-4"></div>
</div>

<script>
    const codeInput = document.getElementById('codeInput');
    const reviewButton = document.getElementById('reviewButton');
    const resultMessage = document.getElementById('resultMessage');

    reviewButton.addEventListener('click', () => {
        // Simulate code review process
        reviewButton.classList.add('result-active', 'fixed', 'top-0', 'right-0', 'bottom-0', 'left-0', 'flex', 'items-center', 'justify-center', 'text-4xl');
        reviewButton.textContent = '75% Nice!';
        codeInput.setAttribute('readonly', true);
        codeInput.classList.add('opacity-50');
        resultMessage.classList.remove('hidden');
        resultMessage.textContent = 'The review is complete.';

        // Disable further clicks
        reviewButton.disabled = true;
    });
</script>
