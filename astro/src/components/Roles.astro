---
const { content } = Astro.props;
---
<div class="pt-16">
    <div class="container mx-auto px-6 text-center md:px-12">
      <div class="mb-8">
        <h2 class="my-4 text-center font-bold text-gray-700 dark:text-white md:text-4xl">
          {content.heading}
        </h2>
        <p class="sm:text-lg text-gray-700 dark:text-gray-300 lg:mx-auto lg:w-8/12 ">
          {content.subheading}
        </p>
      </div>
      <div class="grid gap-28 py-16 md:grid-cols-3 md:gap-12">
        {content.keyFeatures.map(role => (
          <div class="group space-y-8 mt-8 border-t-4 border-gray-100 dark:border-gray-800">
            <div class="mx-auto -mt-16 h-32 w-32 rotate-45 overflow-hidden rounded-[2rem] border-2 border-gray-100 dark:border-gray-800 ">
              <img
                class="mx-auto h-full w-full -rotate-45 scale-125 object-cover transition duration-300 group-hover:scale-[1.4]"
                src={role.imagePath}
                alt="woman"
                loading="lazy"
                width="640"
                height="805"
              />
            </div>
            <div class="space-y-4 text-center">
                <h4 class="text-2xl text-gray-700 dark:text-white">{role.title}</h4>
                <span class="block text-md text-gray-500">{role.description}</span>
            </div>
          </div>  
        ))}
      </div>
    </div>
  </div>