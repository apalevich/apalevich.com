---
const { content } = Astro.props;
---
<div class="max-w-4xl px-6 md:px-12 mx-auto" id="faq-section">
    <h2 class="my-4 text-2xl text-center font-bold text-gray-700 dark:text-white md:text-4xl">
      Frequently asked questions
    </h2>
    <div class="space-y-4 border-t border-indigo-300 border-opacity-25 py-10">
      {
        content.map(item => (
          <details class="bg-white p-6 rounded-lg border-2 border-gray-200">
              <summary class="font-medium cursor-pointer hover:text-gradient1">{item.question}</summary>
              <p class="mt-2 text-gray-600" set:html={item.answer}></p>
          </details>
        ))
      }
    </div>
</div>