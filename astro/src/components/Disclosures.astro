---
const { content } = Astro.props;
---
<div class="py-16 max-w-4xl px-6 md:px-12 mx-auto" id="faq-section">
    <h2 class="my-4 text-center font-bold text-gray-700 dark:text-white md:text-4xl">
      Frequently asked questions
    </h2>
    <div class="space-y-4 py-10">
      {
        content.map(item => (
          <details class="bg-white rounded-lg border-1 border-gray-200">
              <summary class="font-medium p-6 cursor-pointer hover:text-gradient1" set:html={item.question}></summary>
              <p class="mt-2 text-gray-600" set:html={item.answer}></p>
          </details>
        ))
      }
    </div>
</div>