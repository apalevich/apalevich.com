---
const { content } = Astro.props;
---

<div class="py-16" id="features-section">
    <div class="xl:container m-auto px-6 text-gray-500 md:px-12">
        <div>
        <h2 class="mt-4 text-center font-bold text-gray-700 dark:text-white md:text-4xl">
            {content.Heading}
        </h2>
        </div>
        <div class="mt-16 grid md:divide-x divide-y overflow-hidden rounded-3xl border border-gray-100 dark:border-gray-700 sm:grid-cols-2 lg:grid-cols-4 lg:divide-y-0 xl:grid-cols-4">
            {
                content.Columns.map(({Icon, Title, Description }) => (
                    <div class="group relative bg-gray-100 dark:bg-gray-800 transition hover:z-[1] hover:shadow-2xl hover:shadow-gray-600/10 hover:bg-gray-400">
                        <div class="relative space-y-8 pt-12 pb-8 p-8 h-full">
                            <div class="flex flex-col justify-between gap-4">
                                <h5 class="text-xl font-medium text-gray-700 dark:text-white transition group-hover:text-dark">
                                    <span class="pr-1">{ Icon }</span>{ Title }
                                </h5>
                                <p class="text-sm text-gray-600 dark:text-gray-300 group-hover:text-dark">
                                    { Description }
                                </p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>

