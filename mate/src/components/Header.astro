---
const { icon: Logo } = Astro.props;
---

<header>
    <input
        type="checkbox"
        name="hbr"
        id="hbr"
        class="peer"
        hidden
        aria-hidden="true"
    />
    <nav
        class="fixed z-20 w-full dark:bg-gray-900/80 backdrop-blur navbar shadow-2xl shadow-gray-600/5 border-b border-gray-100 dark:border-gray-800 peer-checked:navbar-active dark:shadow-none"
    >
        <div class="xl:container m-auto px-6 md:px-12 lg:px-6">
            <div
                class="flex flex-wrap items-center justify-between gap-6 md:py-2 md:gap-0"
            >
                <div class="w-full items-center flex justify-between lg:w-auto">
                    <a class="relative z-10" href="#" aria-label="logo">
                        <Logo />
                    </a>
                    <label
                        for="hbr"
                        class="peer-checked:hamburger block relative z-20 p-6 -mr-6 cursor-pointer lg:hidden"
                    >
                        <div
                            aria-hidden="true"
                            class="m-auto h-0.5 w-5 rounded bg-gray-900 dark:bg-gray-300 transition duration-300"
                        >
                        </div>
                        <div
                            aria-hidden="true"
                            class="m-auto mt-2 h-0.5 w-5 rounded bg-gray-900 dark:bg-gray-300 transition duration-300"
                        >
                        </div>
                    </label>
                </div>
                <div
                    class="navmenu hidden w-full flex-wrap justify-end items-center mb-8 space-y-8 p-6 border border-gray-100 rounded-3xl shadow-2xl shadow-gray-300/20 bg-white dark:bg-gray-800 dark:lg:bg-transparent lg:space-y-0 lg:p-0 lg:m-0 lg:flex md:flex-nowrap lg:bg-transparent lg:w-7/12 lg:shadow-none dark:shadow-none dark:border-gray-700 lg:border-0"
                >
                    <div
                        class="text-gray-600 dark:text-gray-300 lg:pr-4 text-center"
                    >
                        <ul
                            class="space-y-6 tracking-wide font-medium text-base lg:text-sm lg:flex lg:space-y-0 list-none"
                        >
                            <li>
                                <a
                                    href="#features-section"
                                    class="block md:px-4 transition hover:text-gradient2 dark:hover:text-gradient2"
                                >
                                    <span>Features</span>
                                </a>
                            </li>
                            <li>
                                <a
                                    href="#pricing-section"
                                    class="block md:px-4 transition hover:text-gradient2 dark:hover:text-gradient2"
                                >
                                    <span>Pricing</span>
                                </a>
                            </li>
                            <li>
                                <a
                                    href="#faq-section"
                                    class="block md:px-4 transition hover:text-gradient2 dark:hover:text-gradient2"
                                >
                                    <span>FAQ</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div
                        class="space-y-2 sm:flex-row lg:space-y-0 md:w-max mx-auto lg:mx-0"
                    >
                        <button
                            class="w-full border-gradient2 border-2 rounded-[6px] hover:bg-gradient2 dark:bg-gradient2 text-gradient2 dark:text-white hover:text-white relative mx-auto flex h-9 ml-auto items-center justify-center sm:px-6 text-sm font-semibold"
                            data-modal-show
                        >
                            Get MATE
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
